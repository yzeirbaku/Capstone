@model DomesticViolenceWebApp.Models.User

@{
    ViewBag.Title = "Delete";
}

<style>
    .button {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 4px 25px;
        text-align: right;
        text-decoration: none;
        display: inline;
        border-radius: 6px;
        margin: 4px 2px;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
        cursor: pointer;
    }

    .button2 {
        background-color: white;
        color: black;
        border: 2px solid #9DCCDE;
    }

        .button2:hover {
            background-color: #52B0D2;
            color: white;
        }
</style>

<h2>Delete</h2>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            User Id
        </dt>

        <dd>
            @Html.DisplayFor(model => model.userId)
        </dd>

        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Age
        </dt>

        <dd>
            @Html.DisplayFor(model => model.age)
        </dd>

        <dt>
            Gender
        </dt>

        <dd>
            @Html.DisplayFor(model => model.gender)
        </dd>

        <dt>
            Location
        </dt>

        <dd>
            @Html.DisplayFor(model => model.location)
        </dd>

        <dt>
            Contact One
        </dt>

        <dd>
            @Html.DisplayFor(model => model.emergencyContactOne)
        </dd>

        <dt>
            Contact Two
        </dt>

        <dd>
            @Html.DisplayFor(model => model.emergencyContactTwo)
        </dd>

        <dt>
            Contact Three
        </dt>

        <dd>
            @Html.DisplayFor(model => model.emergencyContactThree)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div style="float:left; margin-left:62px">
            <input type="submit" value="Delete" class="button button2" />
        </div>

        <div class="form-group" style="float:left; margin-left:-10px; margin-right:850px">
            <div class="col-md-offset-1 col-md-10">
                <input type="button" onclick="goBack()" value="Cancel" class="button button2" style="padding: 4px 27px; padding: 4px 24px" />
            </div>
            <br />
        </div>
        <br />
        <div></div>
    }
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>
