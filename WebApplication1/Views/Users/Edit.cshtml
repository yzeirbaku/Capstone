@model DomesticViolenceWebApp.Models.User

@{
    ViewBag.Title = "Edit";
}
<style>
    .button {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 4px 30px;
        text-align: right;
        text-decoration: none;
        display: inline;
        border-radius: 6px;
        margin: 4px 2px;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
        cursor: pointer;
    }

    .button2 {
        background-color: white;
        color: black;
        border: 2px solid #9DCCDE;
    }

        .button2:hover {
            background-color: #52B0D2;
            color: white;
        }
</style>

<h2>Edit</h2>

